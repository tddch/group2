<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".view.fragment.LeftFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_100"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_pao"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/a" />

            <TextView
                android:id="@+id/tv_pao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="袍子" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_100"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_she"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/b" />

            <TextView
                android:id="@+id/tv_she"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社团" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_100"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_pai"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/c" />

            <TextView
                android:id="@+id/tv_pai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排行榜" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_paihang"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_100"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_dingwei" />

            <TextView
                android:id="@+id/tv_ding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的位置" />
        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:gravity="center"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70">
        
        
        <TextView
            android:layout_marginLeft="@dimen/dp_20"
            android:text="热门活动"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>