<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mvp.ui.fragment.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/dp_375"
            android:layout_height="@dimen/dp_46">
            <TextView
                android:text="首页"
                android:textSize="@dimen/sp_20"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="@dimen/dp_375"
            android:layout_height="@dimen/dp_200"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#3E635E5E"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_title" />
        <TextView
            android:text="出行必备"
            android:gravity="center"
            android:id="@+id/tv_chuxing"
            app:layout_constraintTop_toBottomOf="@id/banner"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingVertical="@dimen/dp_16"
            android:textSize="@dimen/sp_18"
            android:paddingLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chuxing"
            android:paddingLeft="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@id/tv_chuxing"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="@dimen/dp_375"
            android:layout_height="@dimen/dp_68"/>
        <TextView
            android:text="海外攻略"
            android:gravity="center"
            android:id="@+id/tv_haiwai"
            app:layout_constraintTop_toBottomOf="@id/rv_chuxing"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingVertical="@dimen/dp_16"
            android:textSize="@dimen/sp_18"
            android:paddingLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_haiwai_gengduo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_16"
            android:text="海外攻略"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@id/tv_haiwai"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_haiwai" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="@dimen/dp_375"
            android:layout_height="@dimen/dp_96"
            android:id="@+id/rv_haiwai"
            app:layout_constraintTop_toBottomOf="@id/tv_haiwai"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="@dimen/dp_16"/>
        <TextView
            android:text="国内攻略"
            android:gravity="center"
            android:id="@+id/tv_guo"
            app:layout_constraintTop_toBottomOf="@id/rv_haiwai"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingVertical="@dimen/dp_16"
            android:textSize="@dimen/sp_18"
            android:paddingLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_guo_gengduo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_16"
            android:text="海外攻略"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@id/tv_guo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_guo" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_guo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_guo"
            android:layout_width="@dimen/dp_375"
            android:layout_height="@dimen/dp_124"/>

        <TextView
            android:text="国内攻略"
            android:gravity="center"
            android:id="@+id/tv_dao"
            app:layout_constraintTop_toBottomOf="@id/rv_guo"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingVertical="@dimen/dp_16"
            android:textSize="@dimen/sp_18"
            android:paddingLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_dao_gengduo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_16"
            android:text="海外攻略"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@id/tv_dao"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_dao" />
        <ImageView
            app:layout_constraintTop_toBottomOf="@id/tv_dao"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/iv_item_dao"
            android:layout_width="@dimen/dp_346"
            android:layout_height="@dimen/dp_200"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    
</androidx.core.widget.NestedScrollView>