<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.ui.activity.BaiduMapActivity">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卫星图"></RadioButton>

        <RadioButton
            android:id="@+id/home_rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通地图"></RadioButton>


        <RadioButton
            android:id="@+id/home_rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热力图"></RadioButton>


        <RadioButton
            android:id="@+id/home_rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交通图"></RadioButton>
    </RadioGroup>


    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />


</LinearLayout>